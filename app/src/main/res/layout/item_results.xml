<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_result"

    android:paddingVertical="8dp"
    android:orientation="horizontal">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lo_pillinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="10">

        <ImageView
            android:id="@+id/iv_pill"
            android:layout_width="110dp"
            android:layout_height="76dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/medicine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pillname"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:paddingEnd="24dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:hint="제품명"
            style="@style/subtitle"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_pill"
            app:layout_constraintTop_toTopOf="@+id/iv_pill" />

        <TextView
            android:id="@+id/tv_pilltype"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:paddingEnd="32dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:hint="제품타입"
            style="@style/caption"
            app:layout_constraintBottom_toBottomOf="@+id/iv_pill"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_pill" />

        <ToggleButton
            android:id="@+id/btn_mypill"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:translationZ="1dp"
            android:checked="false"
            android:textOn=""
            android:textOff=""
            android:scaleType="fitCenter"
            android:background="@drawable/selector_mypill"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>