<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_result"
    android:layout_marginVertical="4dp"
    android:padding="4dp"
    android:orientation="horizontal">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_pill"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/choco"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_pillname"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:hint="제품명"
            android:textSize="28dp"
            app:layout_constraintStart_toEndOf="@+id/iv_pill"
            app:layout_constraintTop_toTopOf="@+id/iv_pill" />
        <TextView
            android:id="@+id/tv_pilltype"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:hint="제품타입"
            android:textSize="24dp"
            app:layout_constraintStart_toEndOf="@+id/iv_pill"
            app:layout_constraintBottom_toBottomOf="@+id/iv_pill" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageButton
        android:id="@+id/btn_pillfavoriteadd"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end|center_vertical"
        android:translationZ="1dp"
        android:src="@drawable/baseline_add_box_24"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        />

</LinearLayout>