<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_medicine_form"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_medicine_form"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            android:background="@drawable/medicine_type_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:gravity="center"
            android:text="편집"
            style="@style/caption"
            android:textColor="@color/gray"
            android:background="@drawable/user_cl_bg_light_gray_radius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/et_medicine_name"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_medicine_name"
        android:textColorHint="@color/gray"
        android:inputType="text|textMultiLine"
        android:scrollHorizontally="false"
        style="@style/body_b"
        android:layout_marginStart="16dp"
        android:padding="8dp"
        android:paddingStart="16dp"
        android:background="@drawable/user_tv_stroke_light_pink_12dp"
        app:layout_constraintTop_toTopOf="@id/cl_medicine_form"
        app:layout_constraintBottom_toBottomOf="@id/cl_medicine_form"
        app:layout_constraintStart_toEndOf="@id/cl_medicine_form" />

    <ImageButton
        android:id="@+id/btn_minus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_minus"
        app:layout_constraintTop_toTopOf="@id/et_medicine_name"
        app:layout_constraintBottom_toBottomOf="@id/et_medicine_name"
        app:layout_constraintStart_toEndOf="@id/et_medicine_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>