<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.schedule.ScheduleFragment"
    android:background="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_public"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/header_logo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/logo_final"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/header_title"
            style="@style/medium_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="부탁해약"
            android:textColor="@color/back_500"
            app:layout_constraintBottom_toBottomOf="@+id/header_logo"
            app:layout_constraintStart_toEndOf="@+id/header_logo"
            app:layout_constraintTop_toTopOf="@+id/header_logo" />

        <View
            android:id="@+id/header_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/any_200"
            app:layout_constraintTop_toBottomOf="@+id/header_logo" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:alpha="0.15"
        android:src="@drawable/logo_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profile_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/header_public"
        app:layout_constraintStart_toStartOf="parent"

        android:padding="13dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/profile_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

                    android:orientation="horizontal"

                    tools:listitem="@layout/schedule_profile_item"
                    tools:itemCount="4"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_add_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"

                    app:cardCornerRadius="12dp"
                    >
                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="74dp"

                        android:src="@drawable/profile_add_btn"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/schedule_container_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_guide_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/bright_gray_green"

        android:visibility="gone"
        >

        <TextView
            android:id="@+id/do_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:text="@string/do_login_please_text"
            style="@style/body_b"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>