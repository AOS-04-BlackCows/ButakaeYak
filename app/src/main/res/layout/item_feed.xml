<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/feed_iv_thumb"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:minWidth="180dp"
        android:src="@drawable/choco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/feed_tv_name"
        android:layout_width="@+id/feed_iv_thumb"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="제목제목"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/feed_iv_thumb"
        app:layout_constraintStart_toStartOf="@+id/feed_iv_thumb"
        app:layout_constraintTop_toBottomOf="@+id/feed_iv_thumb" />

    <TextView
        android:id="@+id/feed_tv_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="작성자"
        app:layout_constraintEnd_toEndOf="@+id/feed_iv_thumb"
        app:layout_constraintStart_toStartOf="@+id/feed_iv_thumb"
        app:layout_constraintTop_toBottomOf="@+id/feed_tv_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>