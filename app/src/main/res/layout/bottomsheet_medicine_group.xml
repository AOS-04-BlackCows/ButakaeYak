<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="42dp"
    android:paddingVertical="34dp"
    >

    <LinearLayout
        android:id="@+id/modify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:paddingVertical="14dp"

        android:background="@color/bright_gray_green"

        android:gravity="center"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:src="@drawable/modify_button_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="12dp"

            android:text="@string/modifying_text"
            style="@style/body"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/remove_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintTop_toBottomOf="@id/modify_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="18dp"

        android:paddingVertical="14dp"

        android:background="@color/bright_gray_green"

        android:gravity="center"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:src="@drawable/remove_btn_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="12dp"

            android:text="@string/remove_text"
            style="@style/body"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>